{
  "name": "@efx/chart-core",
  "version": "0.1.0",
  "description": "Framework-agnostic core types, utilities, and templates for EfxChart",
  "type": "module",
  "license": "MIT",
  "author": "Laurent Marques <laurentefx@icloud.com>",
  "homepage": "https://github.com/electroheadfx/efx-libs#readme",
  "bugs": {
    "url": "https://github.com/electroheadfx/efx-libs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electroheadfx/efx-libs.git",
    "directory": "packages/efx-chart-core"
  },
  "keywords": ["echarts", "charts", "dashboard", "visualization", "typescript"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "echarts": "^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "echarts": "^6.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.2"
  }
}
